doi = {10.1111/j.1365-2664.2006.01149.x},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Ferrier, Guisan{\_}2006{\_}Spatial modelling of biodiversity at the community level.pdf:pdf;:home/sylvain/Documents/Bibliography/Mendeley/Ferrier, Guisan{\_}2006{\_}Spatial modelling of biodiversity at the community level.html:html},
issn = {1365-2664},
