file = {:home/sylvain/Documents/Bibliography/Mendeley/Pottier et al.{\_}2013{\_}The accuracy of plant assemblage prediction from species distribution models varies along environmental gradients.pdf:pdf},
isbn = {1466-8238},
issn = {1466822X},
journal = {Global Ecology and Biogeography},
keywords = {Assembly rules,Community assembly,Elevation gradient,Plant traits,Species distribution models (SDMs),Species diversity},
number = {1},
