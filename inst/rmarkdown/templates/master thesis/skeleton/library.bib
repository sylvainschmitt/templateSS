doi = {10.1016/j.ecolmodel.2007.09.007},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Arii et al.{\_}2008{\_}A selection harvesting algorithm for use in spatially explicit individual-based forest simulation models.pdf:pdf},
