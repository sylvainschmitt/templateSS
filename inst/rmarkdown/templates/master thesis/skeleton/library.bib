author = {Clark, James S. and Dietze, Mike and Chakraborty, Sukhendu and Agarwal, Pankaj K. and Ibanez, Ines and LaDeau, Shannon and Wolosin, Mike},
doi = {10.1111/j.1461-0248.2007.01041.x},
file = {:home/sylvain/Documents/Bibliography/Mendeley/Clark et al.{\_}2007{\_}Resolving the biodiversity paradox.pdf:pdf},
isbn = {1461-023X},
issn = {1461023X},
journal = {Ecology Letters},
keywords = {Coexistence,Hierarchical models,Neutral models,Stochasticity,Tradeoffs},
number = {8},
pages = {647--659},
pmid = {17594418},
title = {{Resolving the biodiversity paradox}},
volume = {10},
