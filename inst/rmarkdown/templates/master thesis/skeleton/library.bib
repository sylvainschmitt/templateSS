file = {:home/sylvain/Documents/Bibliography/Mendeley/Fortunel, Fine, Baraloto{\_}2012{\_}Leaf, stem and root tissue strategies across 758 {\{}Neotropical{\}} tree species.pdf:pdf;:home/sylvain/Documents/Bibliography/Mendeley/Fortunel, Fine, Baraloto{\_}2012{\_}Leaf, stem and root tissue strategies across 758 {\{}Neotropical{\}} tree species.html:html},
issn = {1365-2435},
journal = {Functional Ecology},
keywords = {French Guiana,Peru,functional trade-offs,leaf economics,plant traits,tropical forest,wood economics},
